<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardActivity">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/back_button"
        android:src="@drawable/back"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outlined_2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/card_image"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1150dp"
                android:layout_marginBottom="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="120dp"
                android:backgroundTint="#1c1b1f"
                android:textColor="#d0bcff"
                android:text="보류"
                android:id="@+id/card_deny"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1150dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:text="구매"
                android:textStyle="bold"
                android:id="@+id/card_buy"
                android:backgroundTint="#d0bcff"
                android:textColor="#3B1e27" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>